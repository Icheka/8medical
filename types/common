export enum EAccountActivityStatus {
    Active = "active",
    Inactive = "inactive",
    Deleted = "deleted",
    Banned = "banned",
}

export interface IUser extends IModelDocument {
    email: string;
    password: string;
    role?: string;
    createdAt: Date;
    updatedAt: Date;
}

export type TUserSignInPayload = {
    email: string;
    password: string;
};

export interface IModelDocument {
    _id: string;
    createdAt: Date;
    updatedAt: Date;
}
