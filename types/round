import { TVenture } from "./venture";
import { IModelDocument } from "./common";

export enum ERoundStatus {
    active = "active",
    paused = "paused",
    closed = "closed",
}

export type TRoundEvent = {
    eventName: string;
};

export enum ERoundName {
    preSeed = "pre-seed",
    seed = "seed",
    seriesA = "series a",
    seriesB = "series b",
    seriesC = "series c",
    seriesD = "series d",
    secondary = "secondary",
}

export interface TRound extends IModelDocument {
    name: string;
    target: number;
    preMoneyValuation: number;
    totalEquity: number;
    tokenPrice: number;
    status: ERoundStatus;
    companyId: string;
    amountRaised: number;
    company?: Partial<TVenture>;
}
