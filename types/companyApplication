    description: string;
    blurb: string;
    pitchDeck?: string;
    incorporationDocument?: string;
    logo?: string;
    industries: string;
    problemStatement: string;
    founders: Array<TFounder>;
    teamSize: number;
    teamDuration: string;
    teamRelationshipDescription: string;
    productStage: string;
    productTechnology: string;
    businessModel: string;
    productMonetisationChannels: string;
    productMarketingChannel: string;
    achievedProductMilestones: string;
    competition: string;
    industryRegulators: string;
    competitiveAdvantage: string;
    marketOverview: string;
